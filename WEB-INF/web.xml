<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>NiXTeamLite</display-name>
  <servlet>
    <servlet-name>EmailServlet</servlet-name>
    <servlet-class>com.cqitca.servlet.EmailServlet</servlet-class>
    <init-param>
      <param-name>mailServer</param-name>
      <param-value>smtp.mxhichina.com</param-value>
    </init-param>
    <init-param>
      <param-name>mailAddress</param-name>
      <param-value>test@mingslife.com</param-value>
    </init-param>
    <init-param>
      <param-name>mailPassword</param-name>
      <param-value>XXX</param-value>
    </init-param>
    <init-param>
      <param-name>mailNickname</param-name>
      <param-value>NiX Team Lite</param-value>
    </init-param>
    <init-param>
      <param-name>backupPath</param-name>
      <param-value>F:/test/</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>EmailServlet</servlet-name>
    <url-pattern>/servlet/email</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
